<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
          fx:controller="sample.Subtraction.SubtractionControllerFirstNum" hgap="10" vgap="10" alignment="CENTER">
    <Label text="Please enter the first number" alignment="CENTER">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
    </Label>
    <TextField fx:id="subtractionTextField1" GridPane.rowIndex="1" onAction="#onOKEnter"/>
    <HBox GridPane.rowIndex="2" alignment="CENTER">
        <Button fx:id="OKButton" text="OK" prefWidth="80" GridPane.columnIndex="0"
                defaultButton="true" onAction="#onOKClick" onKeyPressed="#onOKEnter"/>
        <Button fx:id="cancelButton" text="Cancel" prefWidth="80"
                GridPane.columnIndex="1" onAction="#onCancelClick" onKeyPressed="#onCancelEnter"/>
    </HBox>
</GridPane>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="This label is in the top position" alignment="CENTER"
               style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"
               BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <Label text="this label is in the center position" alignment="CENTER" BorderPane.alignment="CENTER"/>
    </center>
    <left>
        <Label text="This label is in the left position" alignment="CENTER" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <Label text="This label is in the right position" alignment="CENTER" BorderPane.alignment="CENTER"/>
    </right>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>

            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>

        </HBox>
    </bottom>
</BorderPane>


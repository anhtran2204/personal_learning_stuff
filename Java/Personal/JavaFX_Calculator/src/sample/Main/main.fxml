<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" fx:controller="sample.Main.Controller">
    <Label text="What function do you want to use?" textAlignment="CENTER" GridPane.rowIndex="0">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
    </Label>
    <ChoiceBox fx:id="functions" prefWidth="180.0" value="Addition"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Addition" />
                <String fx:value="Subtraction" />
                <String fx:value="Multiplication" />
                <String fx:value="Division" />
                <String fx:value="Quadratic" />
            </FXCollections>
        </items>
    </ChoiceBox>
    <HBox alignment="CENTER" spacing="5.0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
        <padding>
            <Insets bottom="10" right="10"/>
        </padding>
        <Button fx:id="okButton" alignment="CENTER" prefWidth="80" defaultButton="true"
                onAction="#onOKClick" onKeyPressed="#onOKEnter" text="OK" textAlignment="CENTER" GridPane.columnIndex="0" />
        <Button fx:id="cancelButton" prefWidth="80" onAction="#onCancelClick"
                onKeyPressed="#onCancelEnter" text="Cancel" GridPane.columnIndex="1" />
    </HBox>
</GridPane>
